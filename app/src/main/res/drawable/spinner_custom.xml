<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DDFFBCBC"/>
        </shape>
    </item>
    <item android:gravity="center_vertical|right" android:right="10dp">
        <layer-list>
            <item android:gravity="right" android:width="17dp" android:height="17dp">
                <bitmap android:src="@drawable/triangle" android:tint="@color/black"/>
            </item>
        </layer-list>
    </item>
</layer-list>