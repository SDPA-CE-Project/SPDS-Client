<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OndeviceActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/vw_Preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </androidx.camera.view.PreviewView>

    <ImageView
        android:id="@+id/imgview"
        android:layout_width="512px"
        android:layout_height="512px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete" />

    <com.example.spda_app.face_detect.GraphicOverlay
        android:id="@+id/vw_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/txtRightEAR"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/standby"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLeftEAR"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/standby"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/txtRightEAR"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAvgEAR"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/standby"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtRightEAR"
        app:layout_constraintStart_toStartOf="@+id/txtLeftEAR"
        app:layout_constraintTop_toBottomOf="@+id/txtRightEAR" />

    <TextView
        android:id="@+id/txtMAR"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/standby"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtAvgEAR"
        app:layout_constraintStart_toStartOf="@+id/txtAvgEAR"
        app:layout_constraintTop_toBottomOf="@+id/txtAvgEAR" />

    <TextView
        android:id="@+id/txtStatCount"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF"
        android:text="@string/sleepStat"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtMAR"
        app:layout_constraintStart_toStartOf="@+id/txtMAR"
        app:layout_constraintTop_toBottomOf="@+id/txtMAR" />

    <TextView
        android:id="@+id/txtBlinkCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/blinkCount"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStatCount" />

    <TextView
        android:id="@+id/txtBlinkAvg"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/blinkAvg"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBlinkCount" />

    <TextView
        android:id="@+id/txtCloseTimeAvg"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/closeTime"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBlinkAvg" />

    <TextView
        android:id="@+id/txtDrozeWarn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/standby"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/vw_Preview"
        app:layout_constraintTop_toBottomOf="@+id/txtCloseTimeAvg" />


    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="@+id/txtBlinkAvg"
        app:layout_constraintStart_toStartOf="@+id/txtBlinkAvg"
        app:layout_constraintTop_toBottomOf="@+id/txtBlinkAvg" />


</androidx.constraintlayout.widget.ConstraintLayout>